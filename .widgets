#!/usr/bin/env bash

bindkey '^h' atuin-search

_launch_tmux_session() {
    BUFFER=""
    CURSOR=0
    zle reset-prompt

    BUFFER="o"
    zle accept-line
}

zle -N _launch_tmux_session
bindkey "^o" _launch_tmux_session

bindkey -s "^f" "yazi\n"

bindkey -s "^g" "lazygit\n"

bindkey -s "^r" "gh repo view --web\n"

bindkey -s "^a" "opencode\n"
